<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backoffice.backoffice.mapper.GradesMapper">

    <!--    직급 생성-->
    <insert id="gradesSave" parameterType="GradesJoinDto">
        insert into "Grades" (name)
        values (#{name})
    </insert>
    <!--  특정 직급 하나 조회  -->
    <select id="findGrades" parameterType="String" resultType="GradesDto">
        select id, name
        from "Grades"
        where name = #{name}
    </select>
    <!--    직급 목록 조회-->
    <select id="findAllGrades" resultType="GradesDto">
        select *
        from "Grades"
    </select>
    <!--    직급 수정-->
    <update id="gradesUpdate" parameterType="GradesUpdateDto">
        update "Grades"
        set name = #{name}
        where id = #{id}
    </update>
    <!--    직급 삭제-->
    <delete id="gradesDelete" parameterType="GradesDeleteDto">
        delete
        from "Grades"
        where id = #{id}
    </delete>

<!--    직급 아이디 뽑기-->
    <select id="findId" parameterType="Integer" resultType="GradesDto">
        select id,name
        from "Grades"
        where id = #{id}
    </select>
</mapper>